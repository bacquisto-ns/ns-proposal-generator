rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Block all direct client access - data is only accessed via server-side Admin SDK
    // The Admin SDK bypasses these rules, so server.js and Firebase Functions still work

    match /opportunities/{opportunityId} {
      allow read, write: if false;
    }

    match /audit_logs/{logId} {
      allow read, write: if false;
    }

    // Catch-all: deny access to any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
